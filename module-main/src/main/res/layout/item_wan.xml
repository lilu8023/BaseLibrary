<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="article"
            type="com.wan.main.entity.WanMainEntity.WanMainChild" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15">

        <TextView
            android:id="@+id/item_wan_author_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{article.author}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="作者" />

        <TextView
            android:id="@+id/item_wan_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{article.niceDate}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2021-11-10 17:05" />

        <TextView
            android:id="@+id/item_wan_title_tv"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@{article.title}"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_wan_author_tv"
            tools:text="我是简单的标题" />

        <TextView
            android:id="@+id/item_wan_des_tv"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_wan_title_tv"
            tools:text="我是又臭又长的描述" />

        <TextView
            android:id="@+id/item_wan_top_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/top"
            android:textColor="@color/color_FF4C23"
            android:visibility="@{article.type !=1 ? View.GONE:View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_wan_des_tv"
            app:layout_constraintEnd_toStartOf="@+id/item_wan_chart_tv"
            android:layout_marginEnd="@dimen/dp_15"
            tools:text="置顶" />

        <TextView
            android:id="@+id/item_wan_chart_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@{article.superChapterName +'-'+article.chapterName}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_wan_top_tv"
            app:layout_constraintTop_toBottomOf="@+id/item_wan_des_tv"
            tools:text="原创-真实" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>