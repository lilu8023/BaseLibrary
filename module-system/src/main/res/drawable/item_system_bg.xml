<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!--设置圆角-->
    <corners
        android:radius="5dp"/>

    <!--设置填充色-->
    <solid
        android:color="@color/color_EEEEEE"/>

    <!--设置边缘间隔-->
    <padding
        android:left="5dp"
        android:right="5dp"
        android:top="2dp"
        android:bottom="2dp"/>

    <!--设置边框色-->
    <stroke
        android:color="@color/color_FF5C50"
        android:width="@dimen/dp_1"/>

</shape>