<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fatherInfo"
            type="com.wan.system.entity.SystemEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        >

        <TextView
            android:id="@+id/item_system_name_tv"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_40"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{fatherInfo.name}"
            tools:text="展示标题"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/color_333333"
            android:gravity="center_vertical"/>

        <com.lilu.appcommon.widget.flowlayout.TagFlowLayout
            android:id="@+id/item_system_tfl"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_system_name_tv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>