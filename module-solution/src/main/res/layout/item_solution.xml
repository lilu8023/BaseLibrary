<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.wan.solution.entity.SolutionEntity.SolutionChild" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/item_solution_author_tv"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/color_BBBBBB"
            android:text="@{item.author}"
            tools:text="作者"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"/>

        <TextView
            android:id="@+id/item_solution_date_tv"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/color_BBBBBB"
            android:text="@{item.niceDate}"
            tools:text="2021-11-10 15:30"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"/>


        <TextView
            android:id="@+id/item_solution_title_tv"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_solution_author_tv"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_333333"
            android:text="@{item.title}"
            tools:text="我是标题"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"/>

        <TextView
            android:id="@+id/item_solution_des_tv"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_solution_title_tv"
            android:textColor="@color/color_BBBBBB"
            tools:text="我是一大窜的描述内容"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"/>

        <TextView
            android:id="@+id/item_solution_super_tv"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_solution_des_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/color_398DEF"
            android:text="@{item.superChapterName +'*'+item.chapterName}"
            tools:text="官方 * 官方"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>